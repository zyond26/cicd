@model IEnumerable<WebRestaurant.Models.Order>

<div class="container">

    <!-- Card để hiển thị các đơn hàng -->
    <div class="card">
        <div class="card-header">
            Danh sách đơn hàng
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Tên khách hàng</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.User.Name</td>
                            <td>@order.Status</td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("Details", "Admin", new { id = order.Id })" class="btn btn-info btn-sm">Chi tiết</a>

                                <form action="@Url.Action("DeleteOrder", "Admin", new { id = order.Id })" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
